{
  "name": "@mott/root",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "db:push": "turbo -F @mott/db push",
    "dev": "turbo dev",
    "lint": "biome lint .",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "prettier": "^3.3.3",
    "turbo": "^2.2.3",
    "typescript": "5.6.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "bun@1.1.34",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tooling/*"
  ],
  "dependencies": {
    "@biomejs/biome": "^1.9.4"
  },
  "trustedDependencies": [
    "@biomejs/biome"
  ]
}
