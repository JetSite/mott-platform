    "superjson": "2.2.1",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@mott/eslint-config": "workspace:*",
    "@mott/prettier-config": "workspace:*",
    "@mott/tsconfig": "workspace:*",
    "eslint": "9.13.0",
    "prettier": "3.3.3",
    "typescript": "5.6.3"
  },
  "prettier": "@mott/prettier-config"
}
